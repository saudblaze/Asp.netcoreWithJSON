@model FACTSERP.Models.products

@{
    ViewData["Title"] = "Index";   
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="page-header">
            <h3>Add Products <a style="float: right;" asp-action="Index" class="btn btn-primary">Back to List</a></h3>            
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="name" class="control-label"></label>
                                <input asp-for="name" class="form-control" required />
                                <span asp-validation-for="name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="qty" class="control-label"></label>
                                <input asp-for="qty" class="form-control" required />
                                <span asp-validation-for="qty" class="text-danger"></span>
                            </div>                            

                            @if (@ViewBag.Message != null)
                            {
                                <div class="form-group">
                                    <label class="label label-danger">@ViewBag.Message</label>
                                </div>
                            }
                            <div class="form-group mt-2" >
                                <button type="submit" value="Save" class="btn btn-info" >Save Product</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>